{
    "id": "org.kde.phone.mobilecalender",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "mobilecalendar",
    "tags": ["nightly"],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "kcalcore",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://anongit.kde.org/kcalcore.git",
                    "branch": "master"
                }
            ],
            "modules": [
                {
                    "name": "libical",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/libical/libical/releases/download/v3.0.4/libical-3.0.4.tar.gz",
                            "sha256": "72b216e10233c3f60cb06062facf41f3b0f70615e5a60b47f9853341a0d5d145"
                        }
                    ],
                    "cleanup": [
                        "/share/gtk-doc"
                    ]
                }
            ]
        },
        {
            "name": "mobilecalender",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}

